{
    "extends": "tslint:latest",
    "rules": {
        "arrow-parens": false,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ]
    }
}